@{
    ViewBag.Title = "Categories";
}

<table id="tblCat" class="display"></table>

<div class="modal fade" id="addCatModal" tabindex="-1" aria-labelledby="addCatModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fs-5" id="addCatModalLabel">Create Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="row mx-auto">
                        <label for="txtName" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input id="txtName" name="Name" class="form-control form-control-sm">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-primary" onclick="createCategory()">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editCatModal" tabindex="-1" aria-labelledby="editCatModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fs-5" id="editCatModalLabel">Edit Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="row mx-auto">
                        <input type="hidden" id="cId" />
                        <label for="etxtName" class="col-sm-3 col-form-label">Name</label>
                        <div class="col-sm-9">
                            <input id="etxtName" name="Name" class="form-control form-control-sm">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnUpdateCategory" class="btn btn-sm btn-primary" onclick="UpdateCategory()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            new DataTable('#tblCat', {
                ajax: {
                    url: '/Category/GetCategories',
                    type: 'Get',
                    datatype: 'json',
                    dataSrc: function (result) {
                        if (result.success === false) {
                            Toast('Error', result.message, 'error');
                            return [];
                        }
                        return result.data;
                    }
                },
                columns: [
                    {
                        data: null,
                        title: '#',
                        render: function (data, type, row, meta) {
                            return meta.row + 1;
                        },
                        type: 'string',
                        width: "5%"
                    },
                    { data: 'name', title: 'Name', width: "91%" },
                    {
                        data: null,
                        render: function (data) {
                            return "<a href='#' onclick='EditCategory(" + data.id + ")' class='me-2'><i class='bi bi-pencil-square text-warning'></i></a>";
                        },
                        width: "2%"
                    },
                    {
                        data: null,
                        render: function (data) {
                            return "<a href='#' onclick='DeleteCategory(" + data.id + ")' class='me-2'><i class='bi bi-trash text-danger'></i></a>";
                        },
                        width: "2%"
                    },
                ],
                paging: false,
                ordering: false,
                info: false,
                layout: {
                    topStart: function (){
                        let $toolbar = $('<a href="#" id="createCat" onclick="addCategory()">Create New</a>');
                        return $toolbar[0];
                    },
                    bottomStart: 'pageLength'
                }

            });
        });

        function addCategory() {
            $('#txtName').val('');
            $('#addCatModal').modal('show');
        }

        function createCategory() {
            var objData = { 'Name': $('#txtName').val() };

            $.ajax({
                url: "/Category/CreateCategory",
                method: "Post",
                data: JSON.stringify(objData),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    //console.log(result);
                    if (result.success) {
                        $('#addCatModal').modal('hide');
                        $('#tblCat').DataTable().ajax.reload();
                        Toast('Success', result.message, 'success');
                    }
                    else {
                        Toast('Error', result.message, 'error');
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error:", error);
                }
            });
        }

        function EditCategory(cid) {
            $.ajax({
                type: "GET",
                url: "/Category/GetCategory?id=" + cid,
                dataType: "json",
                success: function (result) {
                    //console.log(result);
                    if (result.success){
                        $('#cId').val(result.data.id);
                        $('#etxtName').val(result.data.name);
                        $('#editCatModal').modal('show');
                    } else {
                        Toast('Error', result.message, 'error');
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error:", error);
                }
            });
        }

        function UpdateCategory() {
            var objData = {
                'Id': $('#cId').val(),
                'Name': $('#etxtName').val()
            };

            $.ajax({
                url: "/Category/UpdateCategory",
                method: "POST",
                data: JSON.stringify(objData),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    //console.log(result);
                    if (result.success) {
                        $('#editCatModal').modal('hide');
                        $('#tblCat').DataTable().ajax.reload();
                        Toast('Success', result.message, 'success');
                    }
                    else {
                        Toast('Error', result.message, 'error');
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error:", error);
                }
            });
        }

        function DeleteCategory(id) {
            if (confirm("Are you sure you want to delete this category?")) {
                $.ajax({
                    url: "/Category/DeleteCategory",
                    method: "POST",
                    data: { id: id },
                    dataType: "json",
                    success: function (result) {
                        //console.log(result);
                        if (result.success) {
                            $('#tblCat').DataTable().ajax.reload();
                            Toast('Success', result.message, 'success');
                        }
                        else {
                            Toast('Error', result.message, 'error');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", error);
                    }
                });
            }
        }
    </script>
}